<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/light_grey"
    android:paddingStart="12dp"
    android:paddingTop="16dp"
    android:paddingEnd="12dp"
    android:paddingBottom="12dp">

    <TextView
        android:id="@+id/tv_idle_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:text="NO ACTIVITY"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_idle_top"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="3dp"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="@id/tv_idle_title"
        app:layout_constraintStart_toStartOf="@+id/tv_idle_title"
        app:layout_constraintTop_toBottomOf="@id/tv_idle_title" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_idle_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="4dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_idle_top">

        <TextView
            android:id="@+id/tv_idle_message"
            style="@style/TextViewInstructionStyle"
            android:text=""
            android:textSize="16sp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"/>

    </com.google.android.material.card.MaterialCardView>

    <Button
        android:id="@+id/btn_idle_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="28dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_idle_message" />

    s

</androidx.constraintlayout.widget.ConstraintLayout>
