<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/light_grey"
    android:paddingStart="32dp"
    android:paddingTop="8dp"
    android:paddingEnd="32dp"
    android:paddingBottom="16dp">

    <TextView
        android:id="@+id/tv_quit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="0dp"
        android:layout_marginTop="16dp"
        android:text="QUIT"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/quit_view_top"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:layout_marginTop="2dp"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="@id/tv_quit_title"
        app:layout_constraintStart_toStartOf="@+id/tv_quit_title"
        app:layout_constraintTop_toBottomOf="@id/tv_quit_title" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_quit_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/quit_view_top">

        <TextView
            style="@style/TextViewInstructionStyle"
            android:text="The game is in progess. \nAre you sure you want to quit?"
            android:textSize="18sp"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"/>

    </com.google.android.material.card.MaterialCardView>

    <Button
        android:id="@+id/btn_quit_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="42dp"
        android:text="Quit"
        app:layout_constraintEnd_toEndOf="@id/cv_quit_message"
        app:layout_constraintTop_toBottomOf="@id/cv_quit_message" />

    <Button
        android:id="@+id/btn_quit_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginStart="42dp"
        android:backgroundTint="@color/grey"
        android:text="Cancel"
        app:layout_constraintStart_toStartOf="@id/cv_quit_message"
        app:layout_constraintTop_toBottomOf="@id/cv_quit_message" />

</androidx.constraintlayout.widget.ConstraintLayout>
